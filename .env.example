# Example Environment Variables
# Copy this file to .env.local and add your actual values

# Public variables (available in browser)
NEXT_PUBLIC_APP_NAME=Environment Variable Tester
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_VERSION=1.0.0
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Private variables (server-side only)
DATABASE_URL=sqlite://./test.db
API_SECRET_KEY=test_secret_key_12345
JWT_SECRET=jwt_secret_key_67890
SMTP_HOST=smtp.example.com
SMTP_PORT=587

# Third-party service keys (examples)
OPENAI_API_KEY=sk-test_key_here
STRIPE_SECRET_KEY=sk_test_key_here
SENDGRID_API_KEY=your_sendgrid_key_here
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret

# Development variables
NODE_ENV=development
PORT=3001
DEBUG=true

